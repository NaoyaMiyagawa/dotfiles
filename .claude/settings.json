{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "feedbackSurveyState": {
    "lastShownTime": 1754045483926
  },
  "permissions": {
    "allow": [
      // Read
      "Read(~/.zshrc)",
      "Read(~/.claude/*)",
      // MCP
      "mcp__serena",
      // Bash
      "Bash(serena:*)",
      "Bash(grep:*)",
      "Bash(mkdir:*)",
      // - Sail
      "Bash(./vendor/bin/sail artisan:*)",
      "Bash(./vendor/bin/sail exec app:*)",
      "Bash(./vendor/bin/sail test:*)",
      // - NPM
      "Bash(npm run lint)",
      "Bash(npm run test:*)",
      // - GitHub
      "Bash(gh api repos/:owner/:repo/pulls/$(gh pr view --json number --jq .number)/comments:*)",
      "Bash(gh pr view --json body --jq .body:*)",
      "Bash(gh pr view --comments)",
      "Bash(git status *)",
      "Bash(git diff *)"
    ],
    "deny": [
      // Bash
      "Bash(rm -rf *)",
      "Bash(curl:*)",
      "Bash(git:*)",
      "Bash(git clone:*)",
      "Bash(git push:*)",
      "Bash(git pull:*)",
      "Bash(git fetch:*)",
      "Bash(git reset:*)",
      "Bash(docker compose exec app:*)"
    ]
  },
  "hooks": {
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "cat | jq -r '\"display notification \\\"\" + .message + \"\\\" with title \\\"\" + .title + \"\\\" sound name \\\"Glass\\\"\"' | xargs -I {} osascript -e '{}'"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "osascript -e 'display notification \"Task is completed.\" with title \"Claude Code\" sound name \"Glass\"'"
          }
        ]
      }
    ]
  }
}
