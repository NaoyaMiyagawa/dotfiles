{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "env": {
    "CLAUDE_BASH_MAINTAIN_PROJECT_WORKING_DIR": "1"
  },
  "permissions": {
    "allow": [
      "Bash(./vendor/bin/sail artisan:*)",
      "Bash(./vendor/bin/sail exec app:*)",
      "Bash(./vendor/bin/sail test:*)",
      "Bash(* | grep*)",
      "Bash(* | head*)",
      "Bash(* | jq*)",
      "Bash(* | sort*)",
      "Bash(* | tail*)",
      "Bash(* | uniq*)",
      "Bash(* | wc*)",
      "Bash(awk*)",
      "Bash(cp *)",
      "Bash(mv *)",
      "Bash(basename *)",
      "Bash(black --check*)",
      "Bash(black --diff*)",
      "Bash(cat *)",
      "Bash(curl*)",
      "Bash(cut*)",
      "Bash(diff *)",
      "Bash(dirname *)",
      "Bash(echo *)",
      "Bash(eslint*)",
      "Bash(false*)",
      "Bash(find*)",
      "Bash(flake8*)",
      "Bash(gh api repos/:owner/:repo/pulls/$(gh pr view --json number --jq .number)/comments:*)",
      "Bash(gh pr view --comments)",
      "Bash(gh pr view --json body --jq .body:*)",
      "Bash(gh pr*)",
      "Bash(git blame*)",
      "Bash(git branch*)",
      "Bash(git config --get*)",
      "Bash(git diff*)",
      "Bash(git log*)",
      "Bash(git remote -v*)",
      "Bash(git show*)",
      "Bash(git status*)",
      "Bash(grep*)",
      "Bash(head*)",
      "Bash(jq*)",
      "Bash(less *)",
      "Bash(ls*)",
      "Bash(make -n*)",
      "Bash(make test*)",
      "Bash(man *)",
      "Bash(mkdir:*)",
      "Bash(mypy*)",
      "Bash(node*)",
      "Bash(npm list*)",
      "Bash(npm run lint)",
      "Bash(npm run test:*)",
      "Bash(npm run*)",
      "Bash(npm test*)",
      "Bash(npx*)",
      "Bash(printf *)",
      "Bash(pwd*)",
      "Bash(pydoc*)",
      "Bash(pylint*)",
      "Bash(pytest*)",
      "Bash(python*)",
      "Bash(python3*)",
      "Bash(readlink *)",
      "Bash(realpath *)",
      "Bash(sed -n*)",
      "Bash(serena:*)",
      "Bash(sort*)",
      "Bash(tail*)",
      "Bash(test *)",
      "Bash(tree*)",
      "Bash(true*)",
      "Bash(type *)",
      "Bash(uniq*)",
      "Bash(wc*)",
      "Bash(which *)",
      "Bash(yq eval*)",
      "Edit(**)",
      "Glob(**)",
      "Grep(**)",
      "LS(**)",
      "mcp__serena",
      "MultiEdit(**)",
      "Read(**)",
      "Read(~/.claude/*)",
      "Read(~/.zshrc)",
      "Task(**)",
      "TodoRead()",
      "TodoWrite(**)",
      "WebSearch(**)",
      "Write(**)"
    ],
    "deny": [
      "Bash(rm -rf :*)",
      "Bash(curl:*)",
      "Bash(git:*)",
      "Bash(git clone:*)",
      "Bash(git push:*)",
      "Bash(git pull:*)",
      "Bash(git fetch:*)",
      "Bash(git reset:*)",
      "Bash(docker compose exec app:*)"
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "input=$(cat); model=$(echo \"$input\" | jq -r '.model.display_name'); cwd=$(echo \"$input\" | jq -r '.workspace.current_dir'); project=$(echo \"$input\" | jq -r '.workspace.project_dir'); style=$(echo \"$input\" | jq -r '.output_style.name'); branch=$(cd \"$project\" 2>/dev/null && git branch --show-current 2>/dev/null || echo 'no-git'); printf \"\\033[2m%s\\033[0m \\033[34m%s\\033[0m [\\033[33m%s\\033[0m] \\033[36m%s\\033[0m\" \"$model\" \"$(basename \"$cwd\")\" \"$branch\" \"$style\""
  }
}
